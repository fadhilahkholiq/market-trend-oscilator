<%- include('./layouts/header', { sub_title: 'Dashboard' }) %>
<body class="twocolumn-panel">
  <div id="layout-wrapper">
    <div class="main-content">
      <div class="page-content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xl-12">
              <div class="card card-height-100">
                <div class="card-header align-items-center d-flex">
                  <h4 class="card-title mb-0 flex-grow-1">
                    <div class="row">
                      <div class="col-md-6 mt-3">
                        <label><span class="text-danger">*</span> Keyword by Assets Name :</label>
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <span class="input-group-text btn btn-dark text-white"><i class="mdi mdi-file-find"></i></span>
                          </div>
                          <input type="text" class="form-control" placeholder="Search..." onkeyup="tableFilterQuery(this)">
                        </div>
                      </div>
                      <div class="col-md-3 mt-3">
                        <label><span class="text-danger">*</span> Select Algorithm :</label>
                        <select class="form-control" aria-hidden="true" onchange="tableFilterAlgorithm(this)">
                          <option value="" selected>- All Algorithm -</option>
                          <option value="forecast">Linear Forecast</option>
                          <option value="correlation">Price Correlation</option>
                        </select>
                      </div>
                      <div class="col-md-3 mt-3">
                        <label><span class="text-danger">*</span> Select Signal :</label>
                        <select class="form-control" aria-hidden="true" onchange="tableFilterDirection(this)">
                          <option value="" selected>- All Direction -</option>
                          <option value="bullish">Bullish</option>
                          <option value="bearish">Bearish</option>
                        </select>
                      </div>
                    </div>
                  </h4>
                </div>
                <div class="card-body">
                  <div class="table-responsive table-card">
                    <table id="datatable" class="table table-hover table-centered align-middle table-nowrap mb-0">
                      <thead class="text-muted bg-soft-light">
                        <tr>
                          <th>Symbol / Pair</th>
                          <th>Price</th>
                          <th>Direction</th>
                          <th>Percentage</th>
                          <th>Algorithm</th>
                          <th>Timestamp</th>
                          <th>PNL</th>
                          <th>Action</th>
                        </tr>
                      </thead>
                      <tbody></tbody>
                    </table>
                    <div class="row center px-3 py-2" id="datatable_pagination"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include('./layouts/footer') %>
      <script src="/pages/app.home.js"></script>